
<!-- Banner -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1530541873326-1e70f0e1502b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <div class="searchFormContainer">
    <h1>Book unforgettable <span style="color:#20b286">vegan</span> experiences!</h1>
    <p>Join experiences with the main plant based chefs around.</p>
  </div>
  <div class="form">
	<form>
	  <div class="form-row align-items-center">
	    <div class="col">
	      <input type="text" class="form-control" placeholder="Select city or host">
	    </div>
	    <div class="col">
	      <input type="text" class="form-control datepicker" placeholder="Select a date">
	    </div>
	    <div class="col">
	      <input type="text" class="form-control" placeholder="Guests">
	    </div>
	    <div class="col">
	    	<input type="submit" name="submit" value="Search" class="btn btn-primary btn-block">
	    </div>
	  </div>
	</form>
	</div>
</div>
<!-- SearchForm Home -->

<h2 class="title-home">Discover delicious vegan events near you</h2>

<!-- Card Products -->
<div class="container events_index">
  <div class="row">
  <% @events.each do |event| %>
    <div class="col-4">
      <div class="card ml-5 mb-5" style="width: 18rem;">
        <img src="https://images.unsplash.com/photo-1528712306091-ed0763094c98?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" class="card-img-top">
      <div class="price">$ <%= event.price %></div>
      <div class="card-body">
        <h5 class="card-title"><%= event.type_of_event %> - <%= event.type_of_meal %></h5>
        <p class="card-text"><%= event.title %></p>
        <%= link_to "More details", event, class: "btn btn-flat btn-details" %>
      </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
