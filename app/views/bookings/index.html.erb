
<div class="row">
	<% @bookings.each do |booking| %>
<div class="col-4 ">
      <div class="card mb-5" style="width: 18rem;">
        <img src="https://images.unsplash.com/photo-1528712306091-ed0763094c98?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" class="card-img-top">
      <div class="price">$ <%= booking.event.price %></div>
      <div class="card-body">
        <h5 class="card-title"><%= booking.event.type_of_event %> - <%= booking.event.type_of_meal %></h5>
        <p class="card-text"><%= booking.event.title %></p>
        <%= link_to "More details", booking.event, class: "btn btn-flat" %>
        <%= link_to "Delete", booking, method: :delete, data: { confirm: "Are you sure?"}, class: 'btn btn-danger' %>
      </div>
      </div>
    </div>
<% end %>
 </div>
