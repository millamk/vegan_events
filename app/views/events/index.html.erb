<% @events.each do |event| %>
  <%= event.title %>
<% end %>

<div class="container events_index">
  <div class="row">
  <% @events.each do |event| %>
    <div class="col-4">
      <div class="card ml-5 mb-3" style="width: 18rem;">
        <img src="https://image.flaticon.com/icons/svg/1400/1400260.svg" class="card-img-top">
      <div class="card-body">
      <h5 class="card-title"><%= event.title %></h5>
      <p class="card-text"><%= event.description %></p>
      <%= link_to "More details", event, class: "btn btn-primary" %>
      </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
