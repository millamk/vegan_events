<div class="container">
  <div class="banner_show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1549047825-a81dc3f57c7d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=639&q=80);">
    <div class="container">
      <h1><%= @event.title %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="information mt-3">
    <h4>Address: <%= @event.address %></h4>
    <p><i class="far fa-calendar-alt"></i> Date: <%= @event.calendar.day %> / <%= @event.calendar.month %> / <%= @event.calendar.year %></p>
    <p><i class="far fa-clock"></i> Time: <%= @event.calendar.hour %>h <%#= @event.calendar.minutes %>
    <div class="row">
      <div class="col-4">
        <i class="fas fa-utensils"></i> Type of event: <%= @event.type_of_event %>
      </div>
      <div class="col-4">
        <i class="fas fa-seedling"></i> Cuisine type: <%= @event.type_of_meal %>
      </div>
      <div class="col-4">
        <i class="fas fa-users"></i> Numbers of guests: <%= @event.limit_of_guest %>
      </div>
    </div>
    <div class="mt-3">
      <strong>A word about the experience:</strong>
    </div>
    <p><%= @event.description %></p>
  </div>

  <%= link_to "Back to menu", root_path, class: 'btn btn-primary' %>
  <%= link_to "Edit this event", edit_event_path, class: 'btn btn-primary' %>
  <%= link_to "Delete", event_path(@event), method: :delete, data: { confirm: "Are you sure?"}, class: 'btn btn-primary' %>
</div>
</div>

<!-- Booking form -->

<div class="container">
  <%= simple_form_for(@booking) do |f| %>
    <div class="form-inputs mt-3 offset-3 col-6">
      <h2>Create your event:</h2>
    <%= f.input :calendar %>
    <%= f.input :description, label: 'Information about your menu:' %>
    <%= f.input :calendar, label: 'Date:', as: :datetime %>
    <%= f.input :address %>
    <%= f.input :type_of_event, collection: ['Breakfast', 'Lunch', 'Dinner'] %>
    <%= f.input :type_of_meal, label: 'Type of cuisine', collection: ['Italian', 'Indian', 'Japanese'] %>
    <%= f.input :limit_of_guest, label: 'Maximum of guests:' %>
    <%= f.input :price, label: 'Price per person:' %>
    <%= f.submit 'Create an Event', class: 'btn btn-primary btn-block' %>
  <% end %>
  </div>
</div>

